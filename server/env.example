# CrisisHaven Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/crisishaven
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/crisishaven

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# OmniDimension API Configuration
OMNIDIM_API_KEY=your_omnidim_api_key_here
OMNIDIM_AGENT_ID=your_agent_id_here
OMNIDIM_BASE_URL=https://api.omnidim.io

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12 